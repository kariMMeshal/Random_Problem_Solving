#include <iostream>
#include <bits/stdc++.h>
#define fast ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
using namespace std;
typedef long long ll;

int main() {
    fast;

    int t;
    cin >> t;
    while (t--) {
        string s;
        cin >> s;
        string h = s.substr(0, 2);
        string m = s.substr(3, 5);
        int hour = stoi(h);
        if (hour == 0) {
            cout << "12:" << m << " AM\n";
        } else if (hour < 12) {
            cout << s << " AM\n";
        } else if (hour == 12) {
            cout << s << " PM\n";
        } else {
            hour -= 12;
            cout << (hour < 10 ? "0" : "") << hour << ':' << m << " PM\n";
        }
    }

    return 0;
}
